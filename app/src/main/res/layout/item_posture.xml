<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/posture_list_item_padding"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/itemPostureImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/posture_list_item_margin"
        android:layout_width="@dimen/posture_list_item_image_width"
        android:layout_height="@dimen/posture_list_item_image_width"/>

    <TextView
        android:id="@+id/itemPostureName"
        style="@style/AppTheme.TextSubtitle"
        android:layout_margin="@dimen/posture_list_item_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemPostureImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/itemPostureDescription"
        style="@style/AppTheme.Text"
        android:layout_margin="@dimen/posture_list_item_margin"
        app:layout_constraintTop_toBottomOf="@id/itemPostureName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemPostureImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>